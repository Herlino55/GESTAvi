// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Company {
  id                String     @id @unique
  handle            String?    @unique
  name              String
  description       String?    @db.LongText
  logoUrl           String?
  authorizationCode String?
  accessToken       String?    @db.LongText
  refreshToken      String?    @db.LongText
  tokenExpiresAt    DateTime?
  phone             String?
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  shops             Shop[]
  suiviQuotidiens   SuiviQuotidien[]

  @@index([id])
  @@index([handle])
}

model Shop {
  id           String     @id @default(uuid()) @db.VarChar(36)
  companyId    String     @map("company_id")
  name         String
  description  String?    @db.LongText
  currencyCode String     @map("currency_code") @default("XAF")
  metadata     Json?
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  company         Company          @relation(fields: [companyId], references: [id], onDelete: Cascade)
  userShops       UserShop[]
  suiviQuotidiens SuiviQuotidien[]

  @@index([companyId])
  @@index([name])
  @@map("shops")
}

model User {
  id          String     @id @default(uuid()) @db.VarChar(36)
  firstName   String?    @map("first_name")
  lastName    String     @map("last_name")
  email       String     @unique
  phone       String?
  role        String     @default("employee")
  permissions Json
  password    String
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  userShops   UserShop[]

  @@index([email])
  @@index([role])
  @@map("users")
}

model UserShop {
  id        String   @id @default(uuid()) @db.VarChar(36)
  userId    String   @map("user_id") @db.VarChar(36)
  shopId    String   @map("shop_id") @db.VarChar(36)
  createdAt DateTime @default(now()) @map("created_at")

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  shop      Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@unique([userId, shopId])
  @@index([userId])
  @@index([shopId])
  @@map("user_shops")
}

model Product {
  id              String           @id @default(uuid()) @db.VarChar(36)
  title           String           @db.VarChar(50)
  handle          String           @db.VarChar(50)
  content         String           @db.VarChar(100)
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")
  suiviQuotidiens SuiviQuotidien[]

  @@map("products")
}

model SuiviQuotidien {
  id                String   @id @default(uuid()) @db.VarChar(36)
  companyId         String   @map("company_id")
  lotId             String   @map("lot_id") @db.VarChar(36)
  productId         String?  @map("product_id") @db.VarChar(36)
  dateSuivi         DateTime @map("date_suivi") @db.Date
  mortalite         Int      @default(0)
  quantiteAlimentKg Decimal  @default(0) @map("quantite_aliment_kg") @db.Decimal(10, 2)
  observations      String?  @db.Text
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  company Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  lot     Shop     @relation(fields: [lotId], references: [id], onDelete: Cascade)
  product Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  @@index([companyId])
  @@index([lotId])
  @@index([productId])
  @@index([dateSuivi])
  @@map("suivi_quotidiens")
}